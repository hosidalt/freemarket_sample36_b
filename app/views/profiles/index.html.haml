= render partial: 'shared/header'
%main.l-container.clearfix
  .profile
    %section.profile__container
      %h2.profile__container__head.bold
        プロフィール
      = form_for @user, url:{controller: :profiles, action: :index} do |f|
        .profile__container__name
          %figure.profile__container__name__icon
            = image_tag "header/member_photo_noimage_thumb.png", alt:"", width: "60", height:"60"
          =f.text_field :nickname, class: 'profile__container__name__nickname', value:"yoshida", placeholder: "例)TECH::EXPERT"
        .profile__container__content
          =f.text_area :profil_comment, class: 'profile__container__content__introduction', placeholder: "例)"
          =f.submit "変更する", class: 'profile__container__content__btn btn--red'



  = render partial: 'mypages/side-bar'
= render partial: 'shared/footer'
