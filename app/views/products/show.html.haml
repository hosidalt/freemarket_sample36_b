    .items-in-user-profile__body-header
      = "#{@seller.nickname}さんのその他の出品"
    .items-in-user-profile__body-boxs
      - @seller_items.each do |seller_item|
        = link_to product_path(seller_item.id), class: "items-in-user-profile__body-box" do
          = image_tag seller_item.images[0][:image], class: "items-in-user-profile__body-box--image"
          .items-in-user-profile__body-box--text
            .items-in-user-profile__body-box--text_header
              = seller_item.name
            .items-in-user-profile__body-box--text_info
              .items-in-user-profile__body-box--text_info-price
                = "¥ #{seller_item.price.to_s(:delimited)}"
              .items-in-user-profile__body-box--text_info-icon
                = fa_icon("heart", class: "items-in-user-profile__body-box--text_info-icon-heart")
                %span.items-in-user-profile__body-box--text_info-icon-conut
                  3
