.contents.row
  %h2 Sign up
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = devise_error_messages!
    .field
      = f.label :email
      %br/
      = f.email_field :email
      = f.text_field :nickname, type: "hidden", value: "testユーザー"
      = f.text_field :family_name, type: "hidden", value: "山田"
      = f.text_field :first_name, type: "hidden", value: "太郎"
      = f.text_field :kana_family_name, type: "hidden", value: "ヤマダ"
      = f.text_field :kana_first_name, type: "hidden", value: "タロウ"
      = f.number_field :birth_year, type: "hidden", value: 2000
      = f.number_field :birth_month, type: "hidden", value: 1
      = f.number_field :birth_day, type: "hidden", value: 10
      = f.text_field :postal_code, type: "hidden", value: "111-1111"
      = f.text_field :prefecture, type: "hidden", value: "大阪府"
      = f.text_field :city, type: "hidden", value: "大阪市"
      = f.text_field :block_number, type: "hidden", value: "1-1-1"

    .field
      = f.label :password
      - if @validatable
        %em
          (#{@minimum_password_length} characters minimum)
      %br/
      = f.password_field :password, autocomplete: "off"
    .field
      = f.label :password_confirmation
      %br/
      = f.password_field :password_confirmation, autocomplete: "off"
    .actions
      = f.submit "Sign up"
= render "devise/shared/links"
